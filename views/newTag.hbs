<div class="container">

  {{> tags}}

  <h4>Add tag</h4>

  <form action="/tags/new" method="POST">
    <div class="form-group">
      <label for="tag">Tag Name</label>
      <input type="text" class="form-control" id="tag" name="tag">
    </div>
    </br>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>